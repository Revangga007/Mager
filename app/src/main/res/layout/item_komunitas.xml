<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemKomunitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Mobile Legends Indonesia"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/cardFoto"
            app:layout_constraintTop_toTopOf="@id/cardFoto" />

        <TextView
            android:id="@+id/txtKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nunito"
            android:text="Kategori : Moba"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/txtJudul"
            app:layout_constraintTop_toBottomOf="@id/txtJudul" />

        <ImageView
            android:id="@+id/imgMember"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_komunitas"
            android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toStartOf="@id/txtMember"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/txtKategori"
            app:layout_constraintStart_toStartOf="@id/txtKategori"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="0"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imgMember"
            app:layout_constraintTop_toTopOf="@id/imgMember"/>

        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_location"
            app:layout_constraintStart_toEndOf="@id/txtMember"
            app:layout_constraintTop_toTopOf="@id/txtMember"/>

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Indonesia"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imgLocation"
            app:layout_constraintTop_toTopOf="@id/imgMember"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuatKomunitas"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradient_blue_color"
            android:fontFamily="@font/nunito_bold"
            android:text="Gabung"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardFoto"
            app:layout_constraintBottom_toBottomOf="@id/cardFoto"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>